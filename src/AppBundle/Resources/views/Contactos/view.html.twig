{% extends "@App/layout.html.twig" %}
{% block content %}
	<h1 class="text-center">Lista de contactos</h1>
	<table class="table mt-3">
		<thead class="thead-dark">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nombre</th>
				<th scope="col">Numeros</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contactos %}
				<tr>
					<th scope="row" class="align-middle">{{loop.index}}</th>
					<td class="align-middle"><strong>{{contact.nombre}}</strong></td>
					<td class="align-middle">

						{% for telefono in contact.telefono %}
							{{telefono.numero}}
							<br>
							<small>{{telefono.etiqueta}}</small>
							<br><br>
						{% endfor %}
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>

{% endblock %}